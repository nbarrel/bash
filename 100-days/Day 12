# 100 days by nbarrel
#Day 12 
#is it even or odd like me 
#May 31 2024

#!/bin/bash

function is_even {
    local number=$1
    if [ $((number % 2)) -eq 0 ]; then
        echo "$number is even."
    else
        echo "$number is odd."
    fi
}

# Test the function use both to see both returns
is_even 44
is_even 57
